---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
    <!-- Header -->
    <header class="mb-10">
        <div class="flex gap-2 font-mono text-xs text-gray-500 dark:text-gray-400 mb-3">
            <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-us', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                })}
            </time>
        </div>
        <h1 class="font-serif text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 leading-tight">
            {post.data.title}
        </h1>
        {post.data.tags.length > 0 && (
            <div class="flex gap-2">
                {post.data.tags.map(tag => (
                    <span class="font-mono text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded text-gray-600 dark:text-gray-300">
                        {tag}
                    </span>
                ))}
            </div>
        )}
    </header>

	<article class="prose dark:prose-invert prose-slate prose-lg max-w-none font-serif">
		<Content />
	</article>
</Layout>

<style>
    /* Custom prose styling to match the aesthetic */
    :global(.prose) {
        color: #374151;
        font-family: 'Lora', Georgia, serif;
        max-width: 65ch;
        line-height: 1.75;
    }

    :global(.dark .prose) {
        color: #d1d5db;
    }

    :global(.prose p) {
        color: #374151;
    }

    :global(.dark .prose p) {
        color: #d1d5db;
    }

    :global(.prose a) {
        color: #1f2937;
        text-decoration: underline;
        text-decoration-color: #d00000;
        text-underline-offset: 3px;
        font-weight: normal;
    }

    :global(.dark .prose a) {
        color: #e5e7eb;
        text-decoration-color: #d00000;
    }

    :global(.prose a:hover) {
        color: #d00000;
    }

    :global(.dark .prose a:hover) {
        color: #d00000;
    }

    :global(.prose h1, .prose h2, .prose h3, .prose h4) {
        color: #111827;
        font-weight: 700;
        letter-spacing: -0.025em;
        font-family: sans-serif;
    }

    :global(.dark .prose h1, .dark .prose h2, .dark .prose h3, .dark .prose h4) {
        color: #f9fafb;
    }

    :global(.prose h2) {
        margin-top: 2em;
    }

    :global(.prose h3) {
        margin-top: 1.6em;
    }

    :global(.prose code) {
        font-family: 'JetBrains Mono', monospace;
        font-weight: 500;
        background-color: #f3f4f6;
        color: #1f2937;
        padding: 0.2em 0.4em;
        border-radius: 0.25rem;
    }

    :global(.dark .prose code) {
        background-color: #1f2937;
        color: #e5e7eb;
    }

    :global(.prose code::before),
    :global(.prose code::after) {
        content: '';
    }

    :global(.prose pre) {
        background-color: #fcfcfc !important;
        color: #1a1a1a !important;
        border: 1px solid #e5e5e5;
        border-radius: 0.125rem;
        overflow-x: auto;
    }

    :global(.dark .prose pre) {
        background-color: #0d0d0d !important;
        color: #e5e7eb !important;
        border-color: #374151;
    }

    :global(.prose pre code) {
        background-color: transparent;
        padding: 0;
        color: inherit;
    }

    :global(.prose blockquote) {
        border-left-color: #6b7280;
        font-style: italic;
        color: #4b5563;
    }

    :global(.dark .prose blockquote) {
        border-left-color: #4b5563;
        color: #9ca3af;
    }

    :global(.prose ul) {
        list-style-type: disc;
        padding-left: 1.25rem;
    }

    :global(.prose ul li) {
        color: #374151;
    }

    :global(.dark .prose ul li) {
        color: #d1d5db;
    }

    :global(.prose ul li::marker) {
        color: #6b7280;
    }

    :global(.dark .prose ul li::marker) {
        color: #6b7280;
    }

    /* Code block header styling (if using remark-code-title or similar) */
    :global(.prose .remark-code-title) {
        background-color: #f3f4f6;
        color: #6b7280;
        padding: 0.5rem 1rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        border-top-left-radius: 0.125rem;
        border-top-right-radius: 0.125rem;
    }

    :global(.dark .prose .remark-code-title) {
        background-color: #1a1a1a;
        color: #9ca3af;
    }

    /* Math rendering improvements */
    :global(.prose .katex) {
        font-size: 1em;
    }

    :global(.prose .katex-display) {
        margin: 1.5em 0;
        padding: 1rem;
        background-color: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 0.125rem;
    }

    :global(.dark .prose .katex-display) {
        background-color: #1a1a1a;
        border-color: #374151;
    }
</style>
